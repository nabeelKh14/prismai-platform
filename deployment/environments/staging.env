# ==============================================================================
# STAGING ENVIRONMENT CONFIGURATION
# PrismAI - Intelligent Business Automation Platform
# ==============================================================================

# Application Configuration
NODE_ENV=staging
NEXT_PUBLIC_APP_URL=https://staging.prismai.com
NEXT_PUBLIC_APP_NAME=PrismAI-Staging
NEXT_PUBLIC_APP_DESCRIPTION="Intelligent Business Automation Platform - Staging"
NEXT_PUBLIC_COMPANY_NAME=PrismAI

# Supabase Staging Configuration
NEXT_PUBLIC_SUPABASE_URL=https://staging-supabase-url.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=staging_anon_key
SUPABASE_SERVICE_ROLE_KEY=staging_service_role_key
DATABASE_CONNECTION_LIMIT=20

# AI Services Configuration
GEMINI_API_KEY=AIzaSyB1_eyL06hId6XIFiymCkzSb5mGO2RibuY
VAPI_API_KEY=staging_vapi_key

# Multi-Channel Communication
TWILIO_ACCOUNT_SID=AC_staging_account_sid
TWILIO_AUTH_TOKEN=staging_auth_token
TWILIO_WHATSAPP_NUMBER=+1234567890
TWILIO_SMS_NUMBER=+1234567890

# Google Translate API
GOOGLE_CLOUD_PROJECT_ID=prismai-staging
GOOGLE_APPLICATION_CREDENTIALS=/app/config/service-account-staging.json

# Security Configuration
JWT_SECRET=staging_jwt_secret_minimum_32_characters_long
ENCRYPTION_KEY=staging_encryption_key_32_characters
DEFAULT_USER_ID=staging_default_user_uuid

# Analytics & Monitoring
VERCEL_ANALYTICS_ID=staging_analytics_id
SENTRY_DSN=https://staging_sentry_dsn@sentry.io/project_id

# Email Service
RESEND_API_KEY=re_staging_resend_key
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=staging_smtp_password

# Caching & Performance
REDIS_URL=redis://staging-redis:6379
UPSTASH_REDIS_REST_URL=https://staging_redis_url
UPSTASH_REDIS_REST_TOKEN=staging_redis_token

# Webhook Configuration
WEBHOOK_SECRET=staging_webhook_secret

# Monitoring & Health Checks
HEALTH_CHECK_TOKEN=staging_health_check_token
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500

# Database Migration Settings
MIGRATION_LOCK_TIMEOUT=180000
MIGRATION_RETRY_ATTEMPTS=2

# Backup Configuration
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE_CRON="0 4 * * *"

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/staging.crt
SSL_KEY_PATH=/etc/ssl/private/staging.key
SSL_CA_PATH=/etc/ssl/certs/ca.crt

# Container Configuration
CONTAINER_REGISTRY=staging-registry.com/prismai
CONTAINER_TAG=staging
DOCKER_COMPOSE_FILE=docker-compose.staging.yml

# Deployment Configuration
DEPLOYMENT_STRATEGY=blue-green
ROLLBACK_ENABLED=true
HEALTH_CHECK_ENDPOINT=https://staging.prismai.com/api/v1/health
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_RETRIES=3

# Load Balancer Configuration
LOAD_BALANCER_ALGORITHM=round-robin
LOAD_BALANCER_SESSION_STICKY=false
LOAD_BALANCER_HEALTH_CHECK_PATH=/api/v1/health

# CDN Configuration
CDN_PROVIDER=cloudflare
CDN_DISTRIBUTION_ID=staging_cdn_distribution_id
CDN_ORIGIN_DOMAIN=staging.prismai.com

# Monitoring & Alerting
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=false
ALERT_EMAIL_RECIPIENTS=dev-team@prismai.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/staging/webhook

# Feature Flags
ENABLE_ADVANCED_ANALYTICS=false
ENABLE_REAL_TIME_MONITORING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_RATE_LIMITING=true
ENABLE_CORS_PROTECTION=true

# Performance Settings
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=65000
MAX_CONNECTIONS=500

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=300000
DB_POOL_ACQUIRE_TIMEOUT=60000

# Security Headers
CSP_HEADER="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https: wss:;"
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

# API Configuration
API_VERSION=v1
API_RATE_LIMIT=500
API_TIMEOUT=30000
API_CORS_ORIGINS=https://staging-app.prismai.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,xls,xlsx,txt
UPLOAD_PATH=/app/uploads
TEMP_UPLOAD_PATH=/tmp/uploads

# Session Configuration
SESSION_TIMEOUT=3600000
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict

# Encryption Configuration
ENCRYPTION_ALGORITHM=AES-256-GCM
KEY_ROTATION_DAYS=30
ENCRYPTION_KEY_BACKUP_COUNT=3

# Audit Configuration
AUDIT_LOG_RETENTION=90
AUDIT_LOG_LEVEL=debug
AUDIT_LOG_FORMAT=json

# Compliance Configuration
GDPR_ENABLED=true
CCPA_ENABLED=false
DATA_RETENTION_DAYS=365
ANONYMIZATION_ENABLED=true

# Multi-tenancy Configuration
TENANT_ISOLATION_LEVEL=moderate
TENANT_DATA_ENCRYPTION=true
TENANT_RATE_LIMITS=false
TENANT_AUDIT_SEPARATE=false

# Disaster Recovery
DR_ENABLED=false
DR_BACKUP_FREQUENCY=daily
DR_TEST_FREQUENCY=monthly
DR_RECOVERY_TIME_OBJECTIVE=24
DR_RECOVERY_POINT_OBJECTIVE=6

# Cost Optimization
ENABLE_COST_MONITORING=false
COST_ALERT_THRESHOLD=50
COST_OPTIMIZATION_ENABLED=false
RESOURCE_SCALING_ENABLED=false

# Development Override (set to false in production)
ENABLE_DEBUG_MODE=false
ENABLE_STACK_TRACES=true
ENABLE_DETAILED_ERRORS=true