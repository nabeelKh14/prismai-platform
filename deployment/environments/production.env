# Container Configuration
CONTAINER_REGISTRY=your-registry.com/prismai
CONTAINER_TAG=latest
DOCKER_COMPOSE_FILE=docker-compose.production.yml

# Deployment Configuration
DEPLOYMENT_STRATEGY=blue-green
ROLLBACK_ENABLED=true
HEALTH_CHECK_ENDPOINT=https://api.prismai.com/api/v1/health
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_RETRIES=3

# Load Balancer Configuration
LOAD_BALANCER_ALGORITHM=round-robin
LOAD_BALANCER_SESSION_STICKY=true
LOAD_BALANCER_HEALTH_CHECK_PATH=/api/v1/health

# CDN Configuration
CDN_PROVIDER=cloudflare
CDN_DISTRIBUTION_ID=your_cdn_distribution_id
CDN_ORIGIN_DOMAIN=api.prismai.com

# Monitoring & Alerting
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
ALERT_EMAIL_RECIPIENTS=devops@prismai.com,engineering@prismai.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook

# Feature Flags
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_REAL_TIME_MONITORING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_RATE_LIMITING=true
ENABLE_CORS_PROTECTION=true

# Performance Settings
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=65000
MAX_CONNECTIONS=1000

# Database Pool Configuration
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=300000
DB_POOL_ACQUIRE_TIMEOUT=60000

# Security Headers
CSP_HEADER="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https: wss:;"
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

# API Configuration
API_VERSION=v1
API_RATE_LIMIT=1000
API_TIMEOUT=30000
API_CORS_ORIGINS=https://app.prismai.com,https://admin.prismai.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,xls,xlsx,txt
UPLOAD_PATH=/app/uploads
TEMP_UPLOAD_PATH=/tmp/uploads

# Session Configuration
SESSION_TIMEOUT=3600000
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict

# Encryption Configuration
ENCRYPTION_ALGORITHM=AES-256-GCM
KEY_ROTATION_DAYS=90
ENCRYPTION_KEY_BACKUP_COUNT=5

# Audit Configuration
AUDIT_LOG_RETENTION=365
AUDIT_LOG_LEVEL=info
AUDIT_LOG_FORMAT=json

# Compliance Configuration
GDPR_ENABLED=true
CCPA_ENABLED=true
DATA_RETENTION_DAYS=2555
ANONYMIZATION_ENABLED=true

# Multi-tenancy Configuration
TENANT_ISOLATION_LEVEL=strict
TENANT_DATA_ENCRYPTION=true
TENANT_RATE_LIMITS=true
TENANT_AUDIT_SEPARATE=true

# Disaster Recovery
DR_ENABLED=true
DR_BACKUP_FREQUENCY=hourly
DR_TEST_FREQUENCY=weekly
DR_RECOVERY_TIME_OBJECTIVE=4
DR_RECOVERY_POINT_OBJECTIVE=1

# Cost Optimization
ENABLE_COST_MONITORING=true
COST_ALERT_THRESHOLD=80
COST_OPTIMIZATION_ENABLED=true
RESOURCE_SCALING_ENABLED=true

# Development Override (set to false in production)
ENABLE_DEBUG_MODE=false
ENABLE_STACK_TRACES=false
ENABLE_DETAILED_ERRORS=false